<div class="row ">
  <% @pending_themes.each do |theme| %>
    <div class=" col-xs-12 col-sm-6 col-md-4 theme__box">
      <!-- only theme which are still ongoing or past themes which contains at least one post are displayed -->
      <% if theme.photo.present? %>
        <div class=" theme__card">
          <%= render 'shared/theme-card', theme: theme %>
          <%= render 'theme-image', theme: theme %>

          <div class="theme__publication">
            <p>Date limite de soumission: <%= theme.deadline.strftime('%d/%m/%Y') %></p>
          </div>
          <div class="theme__ongoing">
            <i class="far fa-clock"></i>
            <%= theme.deadline.mjd-DateTime.now.mjd %> j
          </div>
        </div>
      <% else %>
        <div class=" theme__card">
          <%= render 'shared/theme-card', theme: theme %>
          <%= render 'theme-deadline', theme: theme %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
