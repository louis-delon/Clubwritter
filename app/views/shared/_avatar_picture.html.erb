<!-- user has loaded a picture for his avatar -->

<% if current_user.avatar.present? %>
  <div>
    <% user_avatar = current_user.avatar %>
    <%= cl_image_tag user_avatar, crop: :thumb, gravity: :face, width: 100, height: 100 %>
  </div>
<!-- user hasn't loaded a picture for his avatar yet-->
<% else %>

  <div>
    <% user_avatar = "default-avatar.png" %>
    <%= image_tag user_avatar, crop: :thumb, gravity: :face, width: 100, height: 100 %>
  </div>
<% end %>
