<section >
  <%= link_to theme_path(theme) do %>
    <p>Thème proposé par</p>
    <% if theme.user.avatar.present? %>
      <% user_avatar = theme.user.avatar %>
      <span>
        <%= cl_image_tag user_avatar, crop: :thumb, gravity: :face, width: 30, height: 30, class: "avatar__user__card" %>
        <%= theme.user.pseudo %>
        <h1><strong><%= truncate(theme.name, length: 65) %></strong></h1>
      </span>
  <!-- user hasn't loaded a picture for his avatar yet-->
    <% else %>
      <% user_avatar = "default-avatar.png" %>
      <span class="avatar__user__card">
        <%= image_tag user_avatar, crop: :thumb, gravity: :face, width: 30, height: 30, class: "avatar__user__card" %>
        <%= theme.user.pseudo %>
        <h1><strong><%= "#{theme.name}"%></strong></h1>
        </span>
    <% end %>
  <% end %>
</section>
