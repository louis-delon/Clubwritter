<%= simple_form_for [@theme, @post] do |f| %>
  <%= f.error_notification %>
  <div>
    <%= f.input :content, as: :ckeditor, input_html: { ckeditor: { toolbar: 'full' } }, :input_html => {rows: 35}, label: "Contenu" %>
  </div>
  <div>
    <%= f.input :private, as: :boolean, inline_label: 'Je souhaite que ce contenu reste privé (seuls les contributeurs du thème pourront lire votre article)' %>
  </div>
  <div>
    <%= f.button :submit, "Enregistrer" %>
  </div>
<% end %>
