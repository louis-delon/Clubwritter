<div class="container">

<% @themes.each do |theme| %>
  <div class=row>
    <% if theme.posts.any? || !theme.deadline.past? %>
    <!-- seul les themes qui ont au moins un post sont affichés sauf si la deadline n'est pas passée -->
      <h1><%= link_to "#{theme.name}", theme_path(theme) %></h1>
      <%= theme.user.pseudo %><br>
      <%= theme.created_at %><br>
    <% end %>
  </div>
<% end %>

</div>
