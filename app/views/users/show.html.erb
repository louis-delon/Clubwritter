<section>
  <div class="container">
    <div class="row post__title">
      <div class=" col-xs-12 col sm 12 col lg 12">
        <% if policy(@user).update? %>
          <!-- current user has already wrotten some posts -->
          <% if @user.posts.any? %>
            <h2><%= "Mes articles" %></h2>
          <% else %>
          <!-- current user hasn't wrotten some posts yet -->
            <h2><%= "Vous n'avez pas encore rédigé d'article" %></h2>
          <% end %>
        <% else %>
          <% if @user.posts.any? %>
            <h2><%= "Articles de #{@user.pseudo.capitalize}" %></h2>
          <% else %>
            <h2><%= "#{@user.pseudo.capitalize} n'a pas encore écrit d'article" %></h2>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="row theme__title">
      <% @user.posts.each do |post| %>
        <div class="col-xs-12, col sm 12, col lg 12">
          <h2><%= link_to post.theme.name, theme_path(post.theme) %> - (<%= link_to post.theme.user.pseudo, user_path(post.theme.user) %>)</h2>
          <p class= "post__content"><%= post.content %></p>
          <br>
        </div>
      <% end %>
    </div>
  </div>
</section>


